<div id="importModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Import Deck from JSON</h3>
  </div>
  <div class="modal-body" class="row-fluid">	
    <form>
	  <div class="row-fluid" >
	    <!--<label class="control-label" for="inputJSON"></label>-->
	    <div class="row-fluid">
	      <textarea rows="10" class="field span12" id="inputJSON" placeholder="Paste you JSON Deck-Key here"></textarea>
	    </div>
	  </div>
	</form>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button data-event-click="controllers.messages.importDeck" class="btn btn-primary">Import Deck</button>
  </div>
</div>

<div id="exportModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Export Deck to JSON</h3>
  </div>
  <div class="modal-body" class="row-fluid">
	<form>
	  <div class="row-fluid" >
	    <!--<label class="control-label" for="inputJSON"></label>-->
	    <div class="row-fluid">
	      <textarea readonly="readonly" rows="10" class="field span12" id="outputJSON" placeholder="Paste you JSON Deck-Key here"></textarea>
	    </div>
	  </div>
	</form>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>